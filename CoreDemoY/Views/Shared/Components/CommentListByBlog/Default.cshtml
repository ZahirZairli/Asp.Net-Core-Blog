@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    @if (Model.Count() != 0)
    {
    <h4>Yorumlar</h4>
        @foreach (var item in Model)
        {
            <div class="media">
                <img style="width: 10%;border-radius: 50%;" src="https://www.pikpng.com/pngl/b/74-748374_laptop-user-personal-computer-computer-icons-computer-user.png" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        <h4>İlk yorum yazan sən ol!</h4>
    }
</div>