@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Bloglar</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="/Blog/BlogReadAll/@item.BlogId">
                                <img src="~/web/images/@item.BlogImage" class="card-img-top img-fluid" alt="@item.BlogTitle">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))
                                            @*@Convert.ToDateTime(item.BlogCreateDate).ToString("dd/MM/yyyy")*@
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 0
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @item.Category.CategoryName
                                        </a>
                                    </li>
                                </ul>
                                <h5 class="card-title">
                                    <a href="/Blog/BlogReadAll/@item.BlogId">@item.BlogTitle</a>
                                </h5>
                                @if (item.BlogContent.Length >= 31)
                                {
                                    <p class="card-text mb-3">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,30).LastIndexOf(" ")).... </p>
                                }
                                else
                                {
                                    <p class="card-text mb-3">@item.BlogContent</p>
                                }
                                <a href="/Blog/BlogReadAll/@item.BlogId" class="btn btn-primary read-m">Ətraflı >></a>
                            </div>
                        </div>
                    }
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>

