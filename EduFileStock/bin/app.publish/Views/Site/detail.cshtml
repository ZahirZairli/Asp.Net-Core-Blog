
@{
    ViewBag.Title = "EduFileStock/Detal";
    ViewBag.ogtitle = "Hər kəs üçün pulsuz təhsil!";
    ViewBag.description = "HƏR KƏSƏ SALAM YENI LAYIHƏ ILƏ QARŞINIZDAYIQ. ƏSAS MƏQSƏDIMIZ ILKIN MƏRHƏLƏDƏ INTERNET ÜZƏRINDƏN MÜXTƏLIF MÖVZULARDA DƏYƏRLI RESURSLARI BIR ARAYA TOPLAMAQ,ONLARI DAHA ƏLÇATAN ETMƏK VƏ YENI BILGILƏR ÖYRƏNMƏK ISTƏYƏN INSANLARA RAHATLIĞI TƏMIN ETMƏKDIR. TƏQDIM EDILƏN RESURSLAR ISƏ TAMAMIYLƏ PULSUZDUR.GƏLƏCƏKDƏ DAHA UĞURLU INKIŞAF YOLU TUTMAQ NIYYƏTI ILƏ. #PULSUZTƏHSILHƏRKƏSÜÇÜN";
    Layout = "~/Views/Shared/Site.cshtml";
    var a = 1;
}
@using EduFileStock.Models

<div class="content" data-pagetitle="Blog">
    <div class="page-scroll-nav psn_single">
        <div class="pagination">
            <div class="pr-bg pr-bg-white"></div>
            <div class="container">
                <div class="to-top-btn to-top"><i class="fal fa-long-arrow-up"></i></div>
                <a href="#"></a>
                <a href="#" class="current-page"></a>
                <a href="#"></a>
                <a href="#"></a>
            </div>
        </div>
    </div>
    <div class="hero-section-dec color-bg">
        <div class="progress-indicator">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="-1 -1 34 34">
                <circle cx="16" cy="16" r="15.9155"
                        class="progress-bar__background" />
                <circle cx="16" cy="16" r="15.9155"
                        class="progress-bar__progress
                                    js-progress-bar" />
            </svg>
        </div>
    </div>
    <div class="fixed-column-wrap">
        <div class="pr-bg"></div>
        <div class="fixed-column-wrap-content">
            <div class="bg" data-bg="https://beic.az/images/sitefile/e24ec9e087istockphoto-1263424631-170667a.jpg"></div>
            <div class="overlay"></div>
            <div class="progress-bar-wrap bot-element">
                <div class="progress-bar"></div>
            </div>
            <div class="fixed-column-wrap_title first-tile_load">
                <h2>@Model.MelumatAltLiAd <br>-EduFileStock</h2>
                <p>Bizimlə birgə sən də öyrən,öyrət,paylaş!</p>
            </div>
            <div class="fixed-column-dec"></div>
            <div class="fixed-column-linedec"></div>
            <div class="scroll-notifer">Aşağı sürüşdür  </div>
        </div>
    </div>
    <div class="column-wrap">
        <div class="column-wrap-container fl-wrap">
            <div class="col-wc_dec"></div>
            <section class="scroll_sec" id="sec1">
                <div class="container">
                    <div class="section-title">
                        <h3>Materiallar</h3>
                        <p>Bəzi materialların pdf'ləri mövcuddur.Daha çoxa klikləyərək baxa bilərsiniz. </p>
                    </div>
                    <div class="gallery-items big-pad  two-column  fl-wrap  ">
                        @foreach (var item in ViewBag.detal)
                        {

                            <div class="gallery-item">
                                <div class="grid-item-holder hov_zoom">
                                    <div class="grid-post-media fl-wrap">
                                        <a href="~/Site/detailmain/@item.DetailId/?@item.DetailAd" class="ajax"><img style="height: 300px;" src="~/Content/images/team/@item.DetailPhoto1" alt=""></a>
                                        <div class="post-det-num">
                                            @a
                                        </div>
                                    </div>
                                    <div class="post-det fl-wrap">
                                        <h3><a href="~/Site/detailmain/@item.DetailId/?@item.DetailAd" class="ajax">@item.DetailAd</a></h3>
                                        <div class="post-header fl-wrap"> <span>@item.DetailTarix</span>  <a href="#">@item.DetailPaylaşan</a> </div>
                                        <p>@item.DetailIlkP</p>
                                        <a href="~/Site/detailmain/@item.DetailId/?@item.DetailAd" class="ajax post-link">Daha çox <i class="fal fa-long-arrow-right"></i></a>
                                    </div>
                                </div>
                                <div class="pr-bg"></div>
                            </div>
                            a++;
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div class="to-top-btn to-top"><i class="fal fa-long-arrow-up"></i></div>
</div>

