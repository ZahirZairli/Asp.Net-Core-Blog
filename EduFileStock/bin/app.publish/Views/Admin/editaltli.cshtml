
@{
    ViewBag.Title = "editaltli";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@using EduFileStock.Models
<div class="container-fluid">
    <div class="content">
        <form method="post" action="~/Admin/upaltli/@Model.MelumatAltLiId">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Alt Kateqoryanın yeni adı:</font></font></label>
                        <input type="text" class="form-control" placeholder="ad" name="MelumatAltLiAd" value="@Model.MelumatAltLiAd">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Aid olduğu kateqoriya:</font></font></label>
                        <select name="MelumatAltLiMelumatId" class="form-control" style="cursor: pointer;">
                            @foreach (var item in ViewBag.melumat)
                            {
                                <option @(item.MelumatId == Model.MelumatAltLiMelumatId ? "selected" : "") value="@item.MelumatId">@item.MelumatAd</option>
                            }
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-fill pull-right"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Yadda saxla</font></font></button>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
</div>


